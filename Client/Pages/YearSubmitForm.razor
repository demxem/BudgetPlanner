@inject Client.Services.ApiClient ApiClient
@inject IMessageService MessageService

<MudDialog>
    <DialogContent>
        <MudTextField T="string" Label="Name" @bind-Value="@inputYearName"></MudTextField>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Href="/budget" Color=" Color.Primary" OnClick="@SubmitAsync">Ok
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    private string inputYearName = "";
    [CascadingParameter] MudDialogInstance? MudDialog { get; set; }

    public async Task PostYearAsync()
    {
        YearModel inputYear = new YearModel
            {
                Name = inputYearName
            };

        await ApiClient.PostYearAsync(inputYear);
    }

    async Task SubmitAsync()
    {
        await PostYearAsync();
        SendMessage();
        MudDialog?.Close(DialogResult.Ok(true));
    }

    private void SendMessage()
    {
        MessageService.SendMessage("YearPosted");
    }

    private void ClearMessages()
    {
        MessageService.ClearMessages();
    }
    void Cancel() => MudDialog?.Cancel();
}








